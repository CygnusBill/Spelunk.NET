{
  "mcpServers": {
    "mcp-roslyn": {
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "/path/to/McpDotnet/src/McpRoslyn.Server/McpRoslyn.Server.csproj"
      ],
      "env": {
        "MCP_ROSLYN_ALLOWED_PATHS": "/Users/your-username/Projects:/Users/your-username/Code",
        "MCP_ROSLYN_WORKSPACE": "/Users/your-username/Projects/MyDotNetProject/MyProject.sln"
      }
    }
  }
}